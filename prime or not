#include <stdio.h>
int main()
{
    int i, n;
    printf("enter the value of n: ");
    scanf("%d", &n);

    if (n<=1)
    {
        printf( "%d is not a prime number");
    }
    for (i=2; i<n; i++){
        if (n%i==0)
            {
            printf("%d isn't a prime number");
            break;
        }
        else
        {
            printf("%d is a prime number");
            break;
        }
    }

    

}
